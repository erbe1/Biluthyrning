@model HyrBil.Models.ViewModels.CarBookingVM

@{
    ViewData["Title"] = "Lägg till en ny bil";
    <div class="text-success">@ViewBag.UserMessage</div>
    <div class="text-warning">@ViewBag.UserMessageFail</div>
}

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <input asp-for="Car.Id" type="hidden" />
                <label asp-for="Car.RegNr" class="control-label"></label>
                <input asp-for="Car.RegNr" class="form-control" />
                <span asp-validation-for="Car.RegNr" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Car.CarSize" class="control-label"></label>
                <select asp-for="Car.CarSize" asp-items="Model.CarSizes" class="form-control">
                    <option disabled selected>Välj biltyp</option>
                </select>
                <span asp-validation-for="Car.CarSize" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Car.CurrentDistance" class="control-label"></label>
                <input asp-for="Car.CurrentDistance" class="form-control" />
                <span asp-validation-for="Car.CurrentDistance" class="text-danger"></span>
            </div>

            <div class="form-group">
                <div class="text-success">@ViewBag.UserMessage</div>
                <div class="text-warning">@ViewBag.UserMessageFail</div>
                <input type="submit" value="Lägg till bil" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Tillbaka</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

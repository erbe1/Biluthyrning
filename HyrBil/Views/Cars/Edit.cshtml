@model HyrBil.Models.ViewModels.CarBookingVM

@{
    ViewData["Title"] = "Edit";
}

<h2>Edit</h2>

<h4>Car</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Car.Id" />
            <div class="form-group">
                <label asp-for="Car.RegNr" class="control-label"></label>
                <input asp-for="Car.RegNr" class="form-control" />
                <span asp-validation-for="Car.RegNr" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Car.CarSize" class="control-label"></label>
                <select asp-for="Car.CarSize" asp-items="Model.CarSizes" class="form-control">
                    <option disabled selected>Välj biltyp</option>
                </select>

                <span asp-validation-for="Car.CarSize" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Car.CurrentDistance" class="control-label"></label>
                <input asp-for="Car.CurrentDistance" class="form-control" />
                <span asp-validation-for="Car.CurrentDistance" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Car.Mileage" class="control-label"></label>
                <input asp-for="Car.Mileage" class="form-control" />
                <span asp-validation-for="Car.Mileage" class="text-danger"></span>
            </div>
            <div class="form-group">
                <div class="checkbox">
                    <label>
                        <input asp-for="Car.Rented" /> @Html.DisplayNameFor(model => model.Car.Rented)
                    </label>
                </div>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
